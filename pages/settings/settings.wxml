    <view class="weui-cell weui-cell_switch" wx:if="{{ switch1 }}">
        <view class="weui-cell__bd">
            <view class="weui-label">按时间段开启夜间模式</view>
        </view>
        <view class="weui-cell__ft">
            <switch bindchange="switch3Change" />
        </view>
    </view>
